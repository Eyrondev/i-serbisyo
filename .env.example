# Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=mysql://root:@localhost:3306/iserbisyo_db

# Email Configuration (Required for OTP verification)
# To get Gmail App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification
# 3. Go to App Passwords: https://myaccount.google.com/apppasswords
# 4. Generate new app password for "Mail"
# 5. Copy the 16-character password and paste below
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here
MAIL_DEFAULT_SENDER=i-Serbisyo <your-email@gmail.com>

# Application Settings
BARANGAY_NAME=Sample Barangay
MUNICIPALITY=Sample Municipality
PROVINCE=Sample Province

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads